@model  webbandodientu_html.Models.Product_Category
@{
    ViewBag.Title = "Home Page";
}

@Html.Partial("_Slider")
<div class="main">
    <div class="content">
        <div class="content_top">
            <div class="heading">
                <h3>New Products</h3>
            </div>
            <div class="see">
                <p><a href="#">See all Products</a></p>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            @foreach (var item in Model.ListProduct)
            {
                <div class="grid_1_of_4 images_1_of_4">
                    <a href=' @Url.Action("Index", "Product", new {id = item.Id}, null)'><img src="~/Content/images/@item.Avata" alt="" /></a>
                    <h2>
                    @Html.ActionLink(item.Name, "Index", "Product", new {id = item.Id}, null)
                    
                    </h2>
                    <div class="price-details">
                        <div class="price-number">
                            <p><span class="rupees">@item.Price VND</span></p>
                        </div>
                        <div class="add-cart">
                            <h4>   @Html.ActionLink("Add to Cart", "Index", "Product", new { id = item.Id }, null)</h4>
                        </div>
                        <div class="clear"></div>
                    </div>

                </div>
            }


        </div>
    
    </div>
</div>