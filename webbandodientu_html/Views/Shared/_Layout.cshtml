<!DOCTYPE HTML>
<head>
    <title>Free Home Shoppe Website Template | Home :: w3layouts</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    <script type="text/javascript" src="js/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="js/move-top.js"></script>
    <script type="text/javascript" src="js/easing.js"></script>
    <script type="text/javascript" src="js/startstop-slider.js"></script>
</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">
                <div class="call">
                    <p><span>Need help?</span> call us <span class="number">1-22-3456789</span></span></p>
                </div>
                <div class="account_desc">
                    <ul>
                        @if (Session["IdUser"] != null)
                        {


                            <li><a href="~/Home/Logout" class="btn btn-warning">Logout</a></li>

                        }
                        else
                        {
                            <li><a href='@Url.Action("Register","home")'>Register</a></li>
                            <li><a href='@Url.Action("Login","home")'>Login</a></li>
                            <li><a href="#">Delivery</a></li>
                        }


                    </ul>
                </div>
                <div class="clear"></div>
            </div>
            <div class="header_top">
                <div class="logo">
                    <a href='@Url.Action("index","home")'><img src="~/Content/images/logo.png" alt="" /></a>

                  

                </div>
                <div class="cart">
                    <p>
                        Welcome to our Online Store! <span>Cart:</span><div id="dd" class="wrapper-dropdown-2">
                            0 item(s) - $0.00
                            <ul class="dropdown">
                                <li>you have no items in your Shopping cart</li>
                            </ul>
                        </div>
                    </p>
                </div>
                <script type="text/javascript">function DropDown(el) {
				this.dd = el;
				this.initEvents();
			}
			DropDown.prototype = {
				initEvents : function() {
					var obj = this;

					obj.dd.on('click', function(event){
						$(this).toggleClass('active');
						event.stopPropagation();
					});
				}
			}

			$(function() {

				var dd = new DropDown( $('#dd') );

				$(document).click(function() {
					// all dropdowns
					$('.wrapper-dropdown-2').removeClass('active');
				});

			});</script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
                <div class="menu">
                    <ul>
                        <li class="active">
                        @Html.ActionLink("Home","index","home")
                        </li>
                        <li>
                            @Html.ActionLink("About", "index", "About")
                        </li>
                        <li>
                            @Html.ActionLink("Delivery", "index", "Delivery")
                        </li>
                        <li>
                            @Html.ActionLink("News", "index", "new")
                        </li>
                        <li>
                            @Html.ActionLink("Contact", "index", "Contact")
                        </li>
                        <div class="clear"></div>
                    </ul>
                </div>
                <div class="search_box">
                    <form>
                        <input type="text" value="Search" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}"><input type="submit" value="">
                    </form>
                </div>
                <div class="clear"></div>
            </div>
            
        </div>
        @RenderBody()

        
    </div>
    <div class="footer">
        <div class="wrap">
            <div class="section group">
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Information</h4>
                    <ul>
                        <li>@Html.ActionLink("About Us", "index", "About")</li>
                        <li><a href="contact.html">Customer Service</a></li>
                        <li><a href="#">Advanced Search</a></li>
                        <li><a href="delivery.html">Orders and Returns</a></li>
                        <li>@Html.ActionLink("Contact Us", "index", "Contact")</li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Why buy from us</h4>
                    <ul>
                        <li>@Html.ActionLink("About Us", "index", "About")</li>
                        <li><a href="contact.html">Customer Service</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                       <li> @Html.ActionLink("Site Map", "index", "Contact")</li>
                        <li><a href="#">Search Terms</a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>My account</h4>
                    <ul>
                        <li>@Html.ActionLink("Sing In", "index", "Contact")</li>
                        <li><a href="index.html">View Cart</a></li>
                        <li><a href="#">My Wishlist</a></li>
                        <li><a href="#">Track My Order</a></li>
                        <li> @Html.ActionLink("Help", "index", "Contact")</li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Contact</h4>
                    <ul>
                        <li><span>+91-123-456789</span></li>
                        <li><span>+00-123-000000</span></li>
                    </ul>
                    <div class="social-icons">
                        <h4>Follow Us</h4>
                        <ul>
                            <li><a href="#" target="_blank"><img src="~/Content/images/facebook.png" alt="" /></a></li>
                            <li><a href="#" target="_blank"><img src="~/Content/images/twitter.png" alt="" /></a></li>
                            <li><a href="#" target="_blank"><img src="~/Content/images/skype.png" alt="" /> </a></li>
                            <li><a href="#" target="_blank"> <img src="~/Content/images/dribbble.png" alt="" /></a></li>
                            <li><a href="#" target="_blank"> <img src="~/Content/images/linkedin.png" alt="" /></a></li>
                            <div class="clear"></div>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="copy_right">
            <p>&copy; 2022 home_shoppe. All rights reserved | Design by Đặng Hữu</p>
        </div>
    </div>
    <script type="text/javascript">$(document).ready(function() {
		

		});</script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
</body>
</html>

